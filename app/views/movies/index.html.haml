-#  This file is app/views/movies/index.html.haml

= form_tag movies_path, :method => :get do
  Include: 
  - Movie::all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]"
  = submit_tag 'Refresh'


%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class=>@title_tohilite,:id=>"title_header"}=link_to "Movie Title", movies_path(:id=>:sortbytitle,:sort_by=>:title )
      %th Rating
      %th{:class=>@release_tohilite,:id=>"title_header"}=link_to "Release Date", movies_path(:sort_by=>:release_date,:id=>:release_sort)
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
= link_to 'update movies', movies_upd_path
= link_to 'Delete movies', movies_del_path
